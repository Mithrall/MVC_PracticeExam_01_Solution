@model List<BlogPost>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<br />
<br />

@using(Html.BeginForm()) {
    <p>
        Name: <input type="text" name="Author">
        <button type="submit">Show only mine</button>
    </p>
}

<table class="table">
    @foreach(var item in Model) {
        <thead>
            <tr>
                <th>Author: @item.Author</th>
                <th>Title: @item.Title</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <p>ID: @item.ID</p>
                    <p>Date: @item.CreateDate</p>
                </td>
                <td>
                    @item.Content
                </td>
            </tr>

        </tbody>
    }
</table>
